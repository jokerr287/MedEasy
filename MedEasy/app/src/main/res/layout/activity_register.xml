<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Register"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <android.widget.Toolbar

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#68A7D4"
            android:minHeight="100dp"
            android:id="@+id/title">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MedEasy"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="40dp"
                android:layout_marginTop="75dp"
                android:fontFamily="sans-serif-black"/>
        </android.widget.Toolbar>
        <EditText

            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:hint="Email ID"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_action_name_email"
            android:layout_marginTop="30dp"
            android:padding="8dp"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            />
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:id="@+id/name"
            android:drawableLeft="@drawable/ic_action_name_name"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_button"
            />
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:drawableLeft="@drawable/ic_action_name_lock"
            android:inputType="textPassword"
            android:id="@+id/pass"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_button"
            />
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:drawableLeft="@drawable/ic_action_name_addr"
            android:id="@+id/pass1"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_button"
            />
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:id="@+id/pass2"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/ic_action_name_call1"
            android:padding="10dp"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_button"
            />
        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:id="@+id/age"
            android:drawableLeft="@drawable/ic_action_name_age"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:textColorHint="#000000"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_button"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/round_color"
            android:fontFamily="sans-serif-black"
            android:onClick="register"
            android:padding="8dp"
            android:text="Register"
            android:textColor="#000000" />
    </LinearLayout>
</ScrollView>